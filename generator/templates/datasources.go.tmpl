package {{ .Package }}

import (
	"context"
	{{ .ApiAlias }} "{{ .ApiPackage }}"

	"github.com/hashicorp/terraform-plugin-log/tflog"
	"github.com/hashicorp/terraform-plugin-sdk/v2/diag"
	"github.com/hashicorp/terraform-plugin-sdk/v2/helper/schema"
)

func dataSources() map[string]*schema.Resource {
	return map[string]*schema.Resource {
		{{range .DataSources }} 
		"{{ .Terraform.Name }}": dataSource{{ .Name }}(), 
		{{ end }}
	}
}

{{range .DataSources }} 

func dataSource{{ .Name }}() *schema.Resource {
	terraformSchema := {{ .SchemaFunction }}()
	{{ range .Terraform.Arguments }}
	terraformSchema["{{ .Name }}"] = &schema.Schema{
		Type:        {{ .Type }},
		Computed:    {{ .Computed }},
		Optional:    {{ .Optional }},
		Required:    {{ .Required }},
		Description: "{{ .Description }}",
	}
	{{ end}}
	return &schema.Resource{
		ReadContext: resource{{ .Name }}Read,
		Schema:      terraformSchema,
	}
}

func resource{{ .Name }}Read(ctx context.Context, d *schema.ResourceData, m interface{}) diag.Diagnostics {
	// Warning or errors can be collected in a slice type
	tflog.Debug(ctx, "Beginning resource{{ .Name }}Read")
	var diags diag.Diagnostics
	c := m.(*ApiClient)
	tflog.Debug(ctx, "Terraform data", map[string]interface{}{
					"client_data": c.data,
					"schema_data": d,
				})

	{{range .ApiParams.Fields }} 
	{{ .Name | ToLower }}:= d.Get("{{ .Name }}").({{ .Type }})
	{{ end }}

	params := kcapi.{{ .ApiParams.Name }}{
		AuthToken: c.data.Get("token").(string),
		{{range .ApiParams.Fields }} 
		{{ .ApiName }}: &{{ .Name | ToLower }},
		{{ end }}
	}
	res, err := c.client.{{ .ApiFunction }}(ctx, &params)
	if err != nil {
		return diag.FromErr(err)
	}

	if res != nil {
		//As the return item is a []Computers, lets Unmarshal it into "computers"
		resItems := {{ .ApiToTerraformFunction }}(res.JSON200)
		for _, element := range resItems {
			tflog.Debug(ctx, "converted {{ .ElementName }}",
				map[string]interface{}{
					"{{ .ElementName }}": element,
				})
		}
		if err := d.Set("{{ .ResultField }}", resItems); err != nil {
			return diag.FromErr(err)
		}
		d.SetId("{{ .ResultId }}")
	} else {
		return diag.Errorf("No data found in db, insert one %s", "{{ .ElementName }}")
	}
	tflog.Debug(ctx, "resource{{ .Name }}Read finished successfully",
		map[string]interface{}{
			"result": d,
		})
	return diags
}

